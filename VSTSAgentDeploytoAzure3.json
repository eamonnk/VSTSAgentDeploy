{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "DnsName": {
        "type": "string",
        "defaultValue": "dnsnameupdateme",
        "minLength": 1
      }
    },
    "variables": {
      "VNETPrefix": "192.168.0.0/24",
      "VNETSubnet1Name": "CountChocula",
      "VNETSubnet1Prefix": "192.168.0.0/24",
      "CountChoculaName": "CountChocula",
      "AgentVMAdminUserName": "azureuser",
      "AgentVMAdminPassword": "Passw0rd0134",
      "ImagePublisher": "MicrosoftWindowsServer",
      "ImageOffer": "WindowsServerSemiAnnual",
      "WindowsOSVersion": "Datacenter-Core-1709-with-Containers-smalldisk",
      "CountChoculaOSDiskName": "[concat(variables('CountChoculaName'), '-OSDISK')]",
      "CountChoculaVmSize": "Standard_D2s_v3",
      "CountChoculaVnetID": "[resourceId('Microsoft.Network/virtualNetworks', 'CountChoculaVNET')]",
      "CountChoculaSubnetRef": "[concat(variables('CountChoculaVnetID'), '/subnets/', variables('VNETSubnet1Name'))]",
      "CountChoculaNicName": "[concat(variables('CountChoculaName'), '-NIC')]",
      "CountChocula-PUBIPName": "[concat(variables('CountChoculaName'), '-PIP')]",
      "InstallAppsScriptFolder": ".",
      "InstallAppsScriptFileName": "ChocolateyInstall.ps1",
      "InstallAppsURL": "https://raw.githubusercontent.com/eamonnk/VSTSAgentDeploy/master/ChocolateyInstall.ps1"
    },
    "resources": [
      {
        "name": "CountChoculaVNET",
        "type": "Microsoft.Network/virtualNetworks",
        "location": "[resourceGroup().location]",
        "apiVersion": "2016-03-30",
        "dependsOn": [],
        "tags": {
          "displayName": "CountChoculaVNET"
        },
        "properties": {
          "addressSpace": {
            "addressPrefixes": [
              "[variables('VNETPrefix')]"
            ]
          },
          "subnets": [
            {
              "name": "[variables('VNETSubnet1Name')]",
              "properties": {
                "addressPrefix": "[variables('VNETSubnet1Prefix')]"
              }
            }
          ]
        }
      },
      {
        "name": "[variables('CountChocula-PUBIPName')]",
        "type": "Microsoft.Network/publicIPAddresses",
        "location": "[resourceGroup().location]",
        "apiVersion": "2017-10-01",
        "dependsOn": [],
        "tags": {
          "displayName": "CountChocula-PUBIP"
        },
        "properties": {
          "publicIPAllocationMethod": "Dynamic",
          "dnsSettings": {
            "domainNameLabel": "[parameters('DnsName')]"
          }
        }
      },
      {
        "name": "[variables('CountChoculaNicName')]",
        "type": "Microsoft.Network/networkInterfaces",
        "location": "[resourceGroup().location]",
        "apiVersion": "2017-10-01",
        "dependsOn": [
          "[resourceId('Microsoft.Network/virtualNetworks', 'CountChoculaVNET')]",
          "[resourceId('Microsoft.Network/publicIPAddresses', variables('CountChocula-PUBIPName'))]"
        ],
        "tags": {
          "displayName": "CountChoculaNic"
        },
        "properties": {
          "ipConfigurations": [
            {
              "name": "ipconfig1",
              "properties": {
                "privateIPAllocationMethod": "Dynamic",
                "subnet": {
                  "id": "[variables('CountChoculaSubnetRef')]"
                },
                "publicIPAddress": {
                  "id": "[resourceId('Microsoft.Network/publicIPAddresses', variables('CountChocula-PUBIPName'))]"
                }
              }
            }
          ]
        }
      },
      {
        "name": "[variables('CountChoculaName')]",
        "type": "Microsoft.Compute/virtualMachines",
        "location": "[resourceGroup().location]",
        "apiVersion": "2017-12-01",
        "dependsOn": [
          "[resourceId('Microsoft.Network/networkInterfaces', variables('CountChoculaNicName'))]"
        ],
        "tags": {
          "displayName": "CountChocula"
        },
        "properties": {
          "hardwareProfile": {
            "vmSize": "[variables('CountChoculaVmSize')]"
          },
          "osProfile": {
            "computerName": "[variables('CountChoculaName')]",
            "adminUsername": "[variables('AgentVMAdminUsername')]",
            "adminPassword": "[variables('AgentVMAdminPassword')]"
          },
          "storageProfile": {
            "imageReference": {
              "publisher": "[variables('ImagePublisher')]",
              "offer": "[variables('ImageOffer')]",
              "sku": "[variables('WindowsOSVersion')]",
              "version": "latest"
            },
            "osDisk": {
              "createOption": "FromImage",
              "diskSizeGB": 1023
            }
          },
          "networkProfile": {
            "networkInterfaces": [
              {
                "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('CountChoculaNicName'))]"
              }
            ]
          }
        },
        "resources": [
          {
            "name": "InstallCountChoculaApps",
            "type": "extensions",
            "location": "[resourceGroup().location]",
            "apiVersion": "2017-12-01",
            "dependsOn": [
              "[resourceId('Microsoft.Compute/virtualMachines', variables('CountChoculaName'))]"
             ],
            "tags": {
              "displayName": "Install CountChocula Applications"
            },
            "properties": {
              "publisher": "Microsoft.Compute",
              "type": "CustomScriptExtension",
              "typeHandlerVersion": "1.4",
              "autoUpgradeMinorVersion": true,
              "settings": {
                "fileUris": [
                  "[variables('InstallAppsURL')]"
                ],
                "commandToExecute": "[concat('powershell -ExecutionPolicy Unrestricted -File ', variables('InstallAppsScriptFolder'), '/', variables('InstallAppsScriptFileName'))]"
              }
            }
          }
        ]
      }
    ],
    "outputs": {}
  }